{
  "expo": {
    "name": "Co",
    "slug": "co",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B1B23"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.letta.co"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.letta.co",
      "backgroundColor": "#1B1B23",
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "static",
      "meta": {
        "viewport": "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
      },
      "name": "Co",
      "shortName": "Co",
      "description": "Letta AI companion",
      "themeColor": "#1B1B23",
      "backgroundColor": "#1B1B23",
      "display": "standalone",
      "startUrl": "/"
    },
    "plugins": [
      "expo-secure-store",
      "expo-font"
    ]
  }
}
